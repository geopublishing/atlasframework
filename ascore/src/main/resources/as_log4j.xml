<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console1" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.SimpleLayout" />
	</appender>

	<appender name="console2" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%r %-5p %-20c{1} %-25M %m%n" />
		</layout>
	</appender>

	<appender name="fileLog" class="org.apache.log4j.FileAppender">
		<param name="File" value="${java.io.tmpdir}/atlasStyler.log" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%date %-5p %c{2} - %m%n" />
		</layout>
	</appender>

	<logger name="it.geosolutions">
		<level value="error" />
	</logger>

	<root>
		<priority value="debug" />
		<appender-ref ref="fileLog" />
		<appender-ref ref="console2" />
	</root>

</log4j:configuration> 
