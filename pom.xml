			<url>http://www.gnu.org/copyleft/gpl.txt</url>
		</license>
	</licenses>

	<properties>
		<geotools.version>2.6.2</geotools.version>
	</properties>
	<developers>
		<developer>
			<id>alfonx</id>
			<name>Stefan A. Tzeggai</name>
