	<modelVersion>4.0.0</modelVersion>
	<groupId>org.geopublishing</groupId>
	<artifactId>gp-atlas-framwork</artifactId>
	<name>Geopublisher and AtlasStyler</name>
	<version>1.4-SNAPSHOT</version>
	<description>Geopublisher (including AtlasStyler) applications.</description>
	<issueManagement>
		<system>gforge</system>
