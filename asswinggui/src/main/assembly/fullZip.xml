	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<filtered>true</filtered>
			<directory>src/main/assembly/</directory>
			<outputDirectory>/AtlasStyler</outputDirectory>
			<includes>
				<include>README_standalone.txt</include>
